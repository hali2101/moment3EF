@model moment3EF.Models.Album

@{
    ViewData["Title"] = "Delete";
}

<h1>Radera</h1>

<h3>Är du säker på att du vill ta bort detta album?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3 col-lg-6">
            @Html.DisplayNameFor(model => model.AlbumName)
        </dt>
        <dd class = "col-sm-9 col-lg-6">
            @Html.DisplayFor(model => model.AlbumName)
        </dd>
        <dt class = "col-sm-3 col-lg-6">
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </dt>
        <dd class = "col-sm-9 col-lg-6">
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
        <dt class = "col-sm-3 col-lg-6">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class="col-sm-9 col-lg-6">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AlbumId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index">Tillbaka till listan</a>
    </form>
</div>
